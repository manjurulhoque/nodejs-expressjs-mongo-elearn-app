<% layout('../layout') -%>
<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Create new class</h3>
    </div>
    <div class="panel-body">
        <form method="post" autocomplete="false" role="form" action="/classes/<%= id %>/lesson/save">
            <fieldset>
                <div class="form-group">
                    <label for="number">Lesson Number:</label>
                    <input class="form-control" id="number" autocomplete="false" placeholder="number" name="number" type="number">
                </div>
                <div class="form-group">
                    <label for="title">Lesson Title:</label>
                    <input class="form-control" id="title" autocomplete="false" placeholder="title" name="title" type="text">
                </div>
                <div class="form-group">
                    <label for="body">Lesson Body:</label>
                    <textarea class="form-control" id="body" autocomplete="false" placeholder="body" name="body"></textarea>
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Create!">
            </fieldset>
        </form>
    </div>
</div>